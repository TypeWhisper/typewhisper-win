<Window x:Class="TypeWhisper.Plugin.Webhook.WebhookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webhook bearbeiten" Width="480" Height="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox x:Name="NameBox" />
        </StackPanel>

        <!-- URL -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="URL" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox x:Name="UrlBox" />
        </StackPanel>

        <!-- HTTP Method -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="HTTP-Methode" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox x:Name="MethodCombo" SelectedIndex="0">
                <ComboBoxItem Content="POST" />
                <ComboBoxItem Content="PUT" />
            </ComboBox>
        </StackPanel>

        <!-- Profile Filter -->
        <StackPanel Grid.Row="3" Margin="0,0,0,4">
            <TextBlock Text="Profil-Filter" FontWeight="SemiBold" Margin="0,0,0,4" />
        </StackPanel>

        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
            <ItemsControl x:Name="ProfileList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}"
                                  Margin="0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Hint Text -->
        <TextBlock x:Name="FilterHint" Grid.Row="5" Foreground="Gray" FontSize="12"
                   Margin="0,0,0,12" TextWrapping="Wrap" />

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Abbrechen" Click="OnCancel" Padding="16,6" Margin="0,0,8,0" />
            <Button Content="Speichern" Click="OnSave" Padding="16,6" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
