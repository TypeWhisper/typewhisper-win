<Window x:Class="TypeWhisper.Windows.Views.SnippetEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snippet bearbeiten"
        Width="420" Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1E1E1E">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UnifiedSettingsStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Auslöser -->
        <TextBlock Grid.Row="0" Text="Auslöser" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="1" Text="{Binding EditTrigger, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputTextBoxStyle}"
                 FontFamily="Consolas" Margin="0,0,0,12"/>

        <!-- Ersetzung -->
        <TextBlock Grid.Row="2" Text="Ersetzung" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="3" x:Name="ReplacementBox"
                 Text="{Binding EditReplacement, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputTextBoxStyle}"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 VerticalContentAlignment="Top"
                 MinHeight="100" Margin="0,0,0,8"/>

        <!-- Platzhalter-Buttons -->
        <WrapPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock Text="Platzhalter:" Foreground="#808080" FontSize="11"
                       VerticalAlignment="Center" Margin="0,0,6,0"/>
            <Button Content="{}{date}" Click="InsertPlaceholder_Click" Tag="{}{date}"
                    Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" FontSize="11" Margin="0,0,4,0"/>
            <Button Content="{}{time}" Click="InsertPlaceholder_Click" Tag="{}{time}"
                    Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" FontSize="11" Margin="0,0,4,0"/>
            <Button Content="{}{datetime}" Click="InsertPlaceholder_Click" Tag="{}{datetime}"
                    Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" FontSize="11" Margin="0,0,4,0"/>
            <Button Content="{}{clipboard}" Click="InsertPlaceholder_Click" Tag="{}{clipboard}"
                    Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" FontSize="11" Margin="0,0,4,0"/>
        </WrapPanel>

        <!-- Case-Sensitive -->
        <CheckBox Grid.Row="5" IsChecked="{Binding EditCaseSensitive}"
                  Style="{StaticResource InputCheckBoxStyle}"
                  Content="Groß-/Kleinschreibung beachten" Margin="0,0,0,12"/>

        <!-- Tags -->
        <StackPanel Grid.Row="6" Margin="0,0,0,16">
            <TextBlock Text="Tags (kommasepariert)" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding EditTags, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource InputTextBoxStyle}"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Abbrechen" IsCancel="True"
                    Style="{StaticResource SecondaryButtonStyle}" Padding="16,8" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Grid.Column="2" Content="Speichern" IsDefault="True"
                    Style="{StaticResource PrimaryButtonStyle}" Padding="16,8"
                    Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>
