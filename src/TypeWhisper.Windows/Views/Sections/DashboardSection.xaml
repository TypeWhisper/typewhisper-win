<UserControl x:Class="TypeWhisper.Windows.Views.Sections.DashboardSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UnifiedSettingsStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel MaxWidth="600" Margin="24">
            <TextBlock Text="Nutzungsstatistiken" Style="{StaticResource SectionHeaderStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.TotalRecords}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Transkriptionen" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.TotalWords}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="WÃ¶rter" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Grid.Row="0" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.TotalDuration}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Dauer" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.RecordsToday}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Heute" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.RecordsThisWeek}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Diese Woche" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Grid.Row="1" Background="{StaticResource InputBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Dashboard.MostUsedLanguage, TargetNullValue='-'}" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Top-Sprache" Foreground="{StaticResource HintBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
